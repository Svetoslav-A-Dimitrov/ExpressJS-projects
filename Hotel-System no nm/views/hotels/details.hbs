<h1>Home Page</h1>

<fieldset>
    <legend>{{selectedHotel.title}}</legend>
    <p>{{selectedHotel.location}}</p>
    <img class="hotelImg" src="{{selectedHotel.image}}" alt="hotel image">   
    <p>{{selectedHotel.description}}</p>
    <p>Total views: {{selectedHotel.views}}</p>
<div>
        <a  href="/like/{{selectedHotel._id}}"><img class="likeBtn" src="/img/like-button-png-2.png" alt="like"></a>
        <p>likes: {{selectedHotel.likes}}</p>
        <span>{{selectedHotel.prop}}</span>
</div>
    
</fieldset>

<div class="login-page">
    <div class="form">
        {{#if currentUser}}
            <form action="/comment/{{selectedHotel._id}}" method="POST" class="create-form">
                <input type="text" name='title' placeholder="Title" />
                <textarea name="comment" id="" cols="35" rows="10" placeholder="comment"></textarea>
                <br>
                <button type="submit">create</button>
            </form>
        {{else}}
            <a href="/login" style="text-decoration: underline">Log in to comment</a>
        {{/if}}
    </div>
</div>



{{#each comments}}
<fieldset>
    <legend>
        <p>{{this.userName}}</p>
    </legend>
    <p>{{this.userComment}}</p>
    <p>{{this.datePosted}}</p>
</fieldset>
{{/each}}